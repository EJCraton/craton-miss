<%= form_for :session, url: sign_in_path do |f| %>

<!-- Empty line to form stay above -->
<div class="row">
  <div class="col s12">
    
  </div>
</div>

<!-- Form -->
<div class="row">
  <div class="input-field col s6 offset-s3">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, autofocus: true, class:"validate", id:"email" %>
  </div>
</div>

<div class="row">
  <div class="input-field col s6 offset-s3">
    <%= f.label :password, 'Senha' %>
    <%= f.password_field :password, autocomplete: "off", class:"validate" %>
  </div>
</div>

<div class="row center-align">
  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= f.submit 'Log in' %>
  </button>
</div>
<% end %>
