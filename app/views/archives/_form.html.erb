<%= form_for @archive, html: { multipart: true } do |f| %>
  <% if archive.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(archive.errors.count, "error") %> prohibited this archive from being saved:</h2>

      <ul>
        <% archive.errors.full_messages.each do |message| %>
          <div class="card-panel teal lighten-2">
            <li><%= message %></li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="file-field input-field">
      <div class="waves-effect waves-light btn">
        <i class="material-icons">add_a_photo</i>
        <span>Imagem</span>
        <%= f.file_field :avatar %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" disabled>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">label</i>
      <%= f.text_field :name, class:'validate', id:'title' %>
      <label for="title">Título</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">mode_edit</i>
      <%= f.text_area(:description, size:"20x30", class:'materialize-textarea', id:'textarea') %>
      <label for="textarea">Descrição</label>
    </div>
  </div>

  <div class="row">
    <button class="btn waves-effect waves-light" type="submit" name="action">
      <i class="material-icons right">send</i>
      <%= f.submit 'Submit' %>
    </button>
  </div>

<% end %>
