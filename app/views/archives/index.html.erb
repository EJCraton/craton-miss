<div class="row">
  <div class="col s12 m12 l12">
    <h2 class="center-align">Arquivos de imagem</h2>
  </div>
</div>
<div class="row">
  <div class="col s12 m12 l12">
    <ul class="collapsible popout" data-collapsible="accordion">
      <% @archives.each do |archive| %>
        <li>
          <div class="collapsible-header center-align"><%= archive.name %></div>
          <div class="collapsible-body">
            <div class="row center-align">
              <%= image_tag archive.avatar.url(:thumb) %>
            </div>
            <div class="row center-align">
              <div class="col s12 m4 l4">
                <%= link_to archive, class:'waves-effect waves-teal btn-flat' do %>
                  <i class="material-icons">image</i>
                  Mostrar
                <% end %>
              </div>
              <div class="col s12 m4 l4">
                <%= link_to edit_archive_path(archive), class:'waves-effect waves-teal btn-flat' do %>
                  <i class="material-icons">edit</i>
                  Editar
                <% end %>
              </div>
              <div class="col s12 m4 l4">
                <%= link_to archive, method: :delete, data: { confirm: 'Are you sure?' }, class:'waves-effect waves-teal btn-flat' do %>
                  <i class="material-icons">delete</i>
                  Deletar
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="fixed-action-btn">
  <%= link_to new_archive_path, class:'btn-floating btn-large waves-effect waves-light red' do %>
    <i class="large material-icons">mode_edit</i>
  <% end %>
</div>
