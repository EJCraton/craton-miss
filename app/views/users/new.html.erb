<h5 align="center">Novo membro :)</h1>

<div class="row">
	<div class="col s6 offset-s3">
		<%= form_for :user, url: '/users' do |f| %>
      <div class="input-field">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name, class: 'validate' %>
      </div>

      <div class="input-field">
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email, class: 'validate' %>
      </div>
        
  		<div class="input-field">
        <%= f.label :cpf, 'CPF' %>
        <%= f.text_field :cpf, class: 'validate' %>
      </div>

      <div class="input-field">
        <%= f.label :telefone, 'Telefone' %>
        <%= f.text_field :telephone, class: 'validate' %>
      </div>
  			
  		<div class="input-field">
        <%= f.label :registry, 'MatrÃ­cula' %>
        <%= f.text_field :registry %>     
      </div>
  		
      <div class="input-field">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password %>
      </div>	
  		
      <div class="input-field">
        <%= f.label :password_confirmation, 'Confirme a senha' %>
        <%= f.password_field :password_confirmation %>  
      </div>
  			
  			<%= f.submit "Submit", :class => 'btn btn-primary' %>

		<% end %>
	</div>
</div>
